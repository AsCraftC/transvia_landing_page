---
import type { ImageMetadata } from 'astro';

import LocationMarkerIcon from "@/icons/LocationMarkerIcon.astro";
import CalendarIcon from "@/icons/CalendarIcon.astro";
import ClockIcon from "@/icons/ClockIcon.astro";

interface Props {
    imagenMuestra   : ImageMetadata;
    nombreProyecto  : string;
    direccion       : string;
    fechaInicio     : Date;
    duracion        : number;
    impacto         : string;
}
const { imagenMuestra, nombreProyecto, direccion, fechaInicio, duracion, impacto } = Astro.props

const inicioString = fechaInicio.toLocaleDateString('es-CL', {})

---

<article class="project" tabindex="0">
    <img 
        class="project__img"
        src={imagenMuestra.src}
        alt=`Muestra aerea de proyecto ${nombreProyecto}`
        loading="lazy"
        decoding="async"
    >
    <div class="project__info">
        <p class="project__title"> {nombreProyecto} </p>
        <ul class="project__labels">
            <li class="project__li">
                <div class="project__icon">
                    <LocationMarkerIcon />
                </div>
                <p class="project__label"> {direccion} </p>
            </li>
            <li class="project__li">
                <div class="project__icon">
                    <CalendarIcon />
                </div>
                <p class="project__label"> {inicioString} </p>
            </li>
            <li class="project__li">
                <div class="project__icon">
                    <ClockIcon />
                </div>
                <p class="project__label"> {duracion} Dias </p>
            </li>
        </ul>
        <p class="project__label project__impact"> <span>Impacto:</span> {impacto} </p>
    </div>
</article>

<style>
.project{
    position        : relative;
    cursor          : pointer;
}
.project:focus  .project__impact,
.project:hover  .project__impact{
    display         : block;
}
.project__img{
    aspect-ratio    : 17 / 9;
}
.project__info{
    position        : absolute;
    bottom          : 0;
    width           : 100%;
    display         : flex;
    flex-direction  : column;
    background-color: rgba(4, 108, 188, 70%);
    padding         : 2em;
    gap             : 1em;
}
.project__title{
    font-size       : 2em;
    font-weight     : 700;
    color           : var(--footer-letter);
}
.project__labels{
    display         : flex;
    justify-content : space-between;
}
.project__li{
    display         : flex;
    gap             : 2px;
    align-items     : center;
}
.project__icon{
    width           : 2em;
    height          : 2em;
    display         : inline-block;
}
.project__label{
    font-size       : 1.5em;
    color           : var(--footer-letter); 
}
.project__impact{
    display: none;
    font-size       : 1.5em;
    color           : var(--footer-letter);
}
.project__label span{
    font-weight     : 700;
}

@media (min-width: 641px) {
    .project__info{
        padding         : 1em;
    }
    .project__img{
        aspect-ratio    : 4 / 3;
    }
    .project__title{
        font-size       : 1.5em;
    }
    .project__labels{
        gap             : 1em;
    }
    .project__label{
        font-size       : 1em;
    }
    .project__icon{
        width           : 1.5em;
        height          : 1.5em;
    }
    .project__impact{
        font-size       : 1em;
        letter-spacing  : -.1em;
    }
    
}
@media (min-width: 899px) {
    .project__impact{
        letter-spacing  : 0em;
    }
}
</style>
