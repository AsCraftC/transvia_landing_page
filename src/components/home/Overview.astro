---
import imagen from "@/assets/home/overview.jpg";
import { Image } from "astro:assets";
interface props {
  slogan: string;
}
const { slogan } = Astro.props;
---

<article class="overview">
  <h2 class="overview__slogan">
    {slogan}
  </h2>
  
  <Image 
    class="overview__img"
    src={imagen}
    alt="Imagen de un calle X de la ciudad"
  />
</article>

<style>
  .overview {
    position: relative;
    padding: 0 1em;
  }
  .overview__slogan {
    position: absolute;
    left: 5rem;
    font-size: 3em;
    font-weight: 700;
    letter-spacing: -0.02em;
  }
  .overview__img {
    width: max(25rem, 55vw);
    height: max(25rem, 55vw);
    margin-left: auto;
  }

  @media (prefers-color-scheme: dark) {
    .overview__slogan {
      text-shadow:
        -1px 0 black,
        0 1px black,
        1px 0 black,
        0 -1px black;
    }
  }

  @media screen and (min-width: 641px) {
    .overview {
      padding: 0 5rem;
    }
    .overview__slogan {
      top: 0;
      font-size: clamp(4.5rem, 7vw - 0.3rem, 12rem);
    }
    .overview__img {
      width: 75vw;
      max-width: 1080px;
      height: 50vw;
      max-height: 720px;
      margin-top: clamp(4.5rem, 7vw - 0.3rem, 12rem);
    }
  }
  @media screen and (min-width: 1440px) {
    .overview {
      width: var(--max-width);
      margin: 0 auto;
    }
  }
</style>
