---
import SectionTitle from "../SectionTitle.astro";

interface Props {
  office: string;
  address: string;
  city: string;
}

const { office, address, city } = Astro.props;
---

<section class="map">
  <iframe
    class="map__google-map"
    title="Ubicacion en google Google Maps"
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3920.922391690484!2d-72.59571690777398!3d-38.73988692483416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9614d3e74498d3b5%3A0xbd2ee4fbcc6ce6b0!2sVicu%C3%B1a%20Mackenna%20678%2C%204791118%20Temuco%2C%20Araucan%C3%ADa!5e0!3m2!1ses-419!2scl!4v1730931761524!5m2!1ses-419!2scl"
    allowfullscreen=""
    loading="eager"
    referrerpolicy="no-referrer-when-downgrade"
  >
  </iframe>
  <article class="map__direction">
    <SectionTitle title="Ubicanos en" />
    <p class="map__content">
      {office}
      <br />
      {address}
      <br />
      {city}
    </p>
  </article>
</section>

<style>
  .map {
    padding: 0 1em;
    display: flex;
    gap: 1em;
  }
  .map__google-map {
    width: 60%;
    height: 30em;
    border: none;
  }
  .map__direction {
    display: flex;
    flex-direction: column;
    gap: 1em;
  }
  .map__content {
    font-size: 1.5em;
    line-height: 1.4em;
    font-weight: 600;
    letter-spacing: -0.04em;
    color: var(--text-color);
  }
  @media (min-width: 641px) {
    .map {
      padding: 0 5rem;
      gap: 3rem;
    }
    .map__google-map {
      height: 40rem;
    }
    .map__direction {
      justify-content: center;
      gap: 2rem;
    }
    .map__content {
      font-size: 2rem;
    }
  }
  @media (min-width: 904px) {
    .map {
      padding: 0 9rem;
      gap: 0;
    }
    .map__google-map {
      width: min(70%, 120rem);
      height: 60rem;
    }
    .map__direction {
      padding: 14rem 5rem;
      margin: auto 0;
      background-color: var(--background-banner);
      border-radius: 0 10px 10px 0;
    }
    .map__content {
      font-size: 3rem;
    }
  }
  @media (min-width: 1440px) {
    .map {
      padding: 0 calc(var(--big-padding) + 9rem);
    }
  }
</style>
